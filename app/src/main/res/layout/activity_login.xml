<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_overlay" />
    <RelativeLayout
        android:alpha="0.6"
        android:background="@drawable/bg_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_margin="50dp"
            android:layout_weight="1"
            android:src="@drawable/logo"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <LinearLayout
            android:padding="20dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:alpha="0.8"
                android:layout_marginStart="15dp"
                android:textColor="@color/white"
                android:layout_gravity="start"
                android:text="Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/input_style_1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:hint="Email"
                android:textColorHint="#37FFFFFF"
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="15dp"
                android:inputType="textEmailAddress" />
            <TextView
                android:alpha="0.8"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:textColor="@color/white"
                android:layout_gravity="start"
                android:text="Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/input_style_1"
                android:textColorHint="#37FFFFFF"
                android:hint="Password"
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:ems="10"
                android:inputType="textPassword" />
            <TextView
                android:textColor="@color/gradient_start"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="end"
                android:text="ลืมรหัสผ่าน?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:padding="12dp"
                android:textColor="@color/gradient_start"
                android:background="@drawable/rounded_btn"
                android:text="@string/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_margin="20dp"
                android:background="@color/gradient_start"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:textColor="@color/gradient_start"
                android:layout_marginTop="5dp"
                android:text="@string/regisText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>